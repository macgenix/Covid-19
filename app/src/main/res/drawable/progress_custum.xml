<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/bac">
        <shape>
            <padding
                android:bottom="3dp"
                android:top="3dp"
                android:right="3dp"
                android:left="3dp"/>
<!--            <corners
                android:radius="5dp"/>-->
            <gradient
                android:startColor="#B2DFDB"
                android:centerColor="#B2DFDB"
                android:centerY="0.50"
                android:endColor="#B2DFDB"
                android:angle="270"/>
        </shape>

    </item>
    <item
        android:id="@+id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="5dp"/>
                <gradient
                    android:startColor="#ff0e75af"
                    android:endColor="#ff1997e1"
                    android:angle="90"/>
            </shape>
        </clip>
    </item>
</layer-list>