<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mixParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="smallCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/smallCardHeight</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="bigCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bigCardHeight</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="tvCardStyle" parent="viewParent">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/whrite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <style name="imgViewCardStyle">
        <item name="android:layout_width">@dimen/imgCardHeight</item>
        <item name="android:layout_height">@dimen/imgCardHeight</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="llVertical" parent="mixParent">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="llHorizontal" parent="mixParent">
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- include consigne -->
    <style name="tvConsigneStyle" parent="viewParent">
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="tvConsigneHide" parent="viewParent">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="imgConsigne">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="cardConsigneStyle" parent="mixParent">
        <item name="android:layout_margin">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="custom_progress" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_custum</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>
</resources>
