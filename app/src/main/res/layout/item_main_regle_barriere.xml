<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/smallCardStyle"
    android:id="@+id/card_regle"
    app:cardCornerRadius="8dp"
    android:background="?attr/selectableItemBackground"
    app:cardElevation="6dp"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:id="@+id/rl_global"
        android:background="#795548"
        style="@style/mixParent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img_embleme"
            style="@style/imgViewCardStyle"
            android:src="@drawable/regle"/>

        <TextView
            android:id="@+id/tv_title"
            style="@style/tvCardStyle"
            android:text="Règles barrières"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>