<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.FinAutodiagnosticActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_ville"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="16sp"
            android:textColor="@color/textColor"
            android:gravity="center_horizontal"/>

        <View
            android:id="@+id/view"
            android:layout_below="@+id/tv_ville"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#212121"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"/>

        <LinearLayout
            android:id="@+id/ll"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="24dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resultats"
                android:textSize="29sp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="48dp"/>
            <TextView
                android:id="@+id/tv_text"
                android:textSize="24sp"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Envoyer chez un mÃ©decin"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:background="@drawable/roundbutton"
                android:padding="16dp"
                android:textColor="#fff"/>
            <Button
                android:id="@+id/btn_quitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ne pas envoyer"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:padding="16dp"
                android:textColor="@color/textColor"/>
        </LinearLayout>

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>